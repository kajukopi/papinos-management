<main id="content" style="margin-top: 58px">
  <section class="container my-5 py-2">
    <div class="row g-3">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body d-flex justify-content-center align-items-center flex-column">
            <div class="w-100 mb-3" id="reader"></div>
            <div class="d-flex justify-content-between align-items-center flex-row w-100">
              <button id="stop-scan" disabled class="btn btn-secondary">stop</button>
              <button id="start-scan" class="btn btn-primary">start</button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <form id="form-assets">
            <div class="card-header">Start scan QRCODE</div>
            <div class="card-body">
              <ol id="data-assets"></ol>
            </div>
            <div class="card-footer">
              <button type="submit" class="btn btn-primary" disabled>Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</main>